extends layout

block body
	div(ng-controller='AppCtrl')
		// Always shows a header, even in smaller screens.
		md-toolbar(layout='row')
			.md-toolbar-tools
				md-button.md-icon-button(ng-click="toggleSidenav('left')", hide-gt-sm='')
					md-icon(aria-label='Menu', md-svg-icon='https://s3-us-west-2.amazonaws.com/s.cdpn.io/68133/menu.svg')
				h1 Hello World
		div(layout='row', flex='')
			md-sidenav.md-sidenav-left.md-whiteframe-z2(layout='column', md-component-id='left', md-is-locked-open="$mdMedia('gt-sm')")
				h1 Navigation
				md-button(ng-href="view1" ng-click="closeSidenav('left')") Link 1
				md-button(ng-href="downloads" ng-click="closeSidenav('left')") Downloads
				md-button(ng-href="login" ng-click="closeSidenav('left')") Login
			#content(layout='column', flex='')
				md-content.md-padding(layout='column', flex='')
					div(ng-view)

					div
						| Angular seed app: v
						span(app-version)
